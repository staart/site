{
  "name": "@staart/site",
  "version": "2.4.0",
  "module": "dist/module.js",
  "main": "dist/index.js",
  "bin": "./dist/index.js",
  "types": "./dist/module.d.ts",
  "repository": "git@github.com:staart/site",
  "homepage": "https://staart.js.org/site",
  "author": "Anand Chowdhary <mail@anandchowdhary.com>",
  "license": "MIT",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "compile": "tsc",
    "generate": "node dist/index.js",
    "build": "npm run compile && npm run generate",
    "increment-package": "node setup/increment.js",
    "serve": "live-server public --quiet",
    "prettier-all": "prettier '{src,setup}/**/*.{ts,js,json}' --write",
    "watch-build": "onchange '{src}/**/*.ts' -- yarn build",
    "watch-prettier": "onchange '{src}/**/*.{ts,json}' -- prettier --write {{changed}}",
    "changelog": "gitmoji-changelog",
    "release": "gh-release",
    "semantic-release": "semantic-release"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "concurrently": "^5.2.0",
    "cosmiconfig": "^6.0.0",
    "front-matter": "^4.0.2",
    "fs-extra": "^9.0.1",
    "git-url-parse": "^11.1.2",
    "handlebars": "^4.7.6",
    "highlight.js": "^10.0.3",
    "html-minifier": "^4.0.0",
    "live-server": "^1.2.1",
    "marked": "^1.1.0",
    "minimist": "^1.2.5",
    "node-cache": "^5.1.1",
    "recursive-readdir": "^2.2.2",
    "remove-markdown": "^0.3.0",
    "sass": "^1.26.8",
    "signale": "^1.4.0",
    "sitemap": "^6.1.5",
    "truncate": "^2.1.0",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "@semantic-release/git": "^9.0.0",
    "@types/fs-extra": "^9.0.1",
    "@types/git-url-parse": "^9.0.0",
    "@types/highlight.js": "^9.12.4",
    "@types/html-minifier": "^3.5.3",
    "@types/marked": "^0.7.4",
    "@types/minimist": "^1.2.0",
    "@types/node": "^14.0.14",
    "@types/recursive-readdir": "^2.2.0",
    "@types/remove-markdown": "^0.1.1",
    "@types/sass": "^1.16.0",
    "@types/signale": "^1.4.1",
    "@types/yaml": "^1.9.7",
    "gh-release": "^3.5.0",
    "gitmoji-changelog": "^2.1.0",
    "onchange": "^7.0.2",
    "prettier": "^2.0.5",
    "semantic-release": "^17.0.8",
    "semantic-release-gitmoji": "^1.3.4",
    "typescript": "^3.9.5"
  }
}
